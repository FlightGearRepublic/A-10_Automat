<?xml version="1.0" encoding="UTF-8"?>

<!-- This should produce nice flames and smoke for burning objects. -->
<PropertyList>
	<particlesystem>
		<name>smoke</name>
		<texture>smoke.png</texture>
		<emissive>false</emissive>
		<lighting>true</lighting>
		<type>normal</type>
		<align>billboard</align>
		<attach>world</attach>
		
    <offsets>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
			<pitch-deg>0.0</pitch-deg>
		</offsets>
		
		<condition>
				<property>/bombable/menusettings/fire-particles/damagedengine-trigger</property>
		</condition>
	
		<placer>
			<type>sector</type>
			<radius-min-m>0</radius-min-m>
			<radius-max-m>.001</radius-max-m>
		</placer>
		
		<counter>
			<particles-per-sec>
				<value>9</value>
				<spread>0</spread>
			</particles-per-sec>
		</counter>
		
		<particle>
			<start>
				<color>
					<red>
						<value>0.2</value>
					</red>
					<green>
						<value>0.2</value>
					</green>
					<blue>
						<value>0.2</value>
					</blue>
					<alpha>
						<value>1.0</value>
					</alpha>
				</color>
				<size>
					<value>2</value>
					
				</size>
			</start>
			<end>

				<color>
					<red>
						<value>0.9</value>
					</red>
					<green>
						<value>0.9</value>
					</green>
					<blue>
						<value>0.9</value>
					</blue>
					<alpha>
						<value>0.5</value>
					</alpha>
				</color>
 				<size>
					<value>15</value>
				</size>
			</end>
			<life-sec>
				<property>/bombable/fire-particles/damagedengine-life-sec</property>
			</life-sec>
			<mass-kg>1204</mass-kg><!-- Air density: 1,204Kg/m3 at 20Â°C -->
			<radius-m>4.18667</radius-m>
		</particle>
		
		<program>
			<fluid>air</fluid>
			<!--  this is heavier black stuff so we'll try gravity-->
			<gravity type="bool">false</gravity>
			<wind type="bool">true</wind>
		</program>
	</particlesystem>
	

</PropertyList>
